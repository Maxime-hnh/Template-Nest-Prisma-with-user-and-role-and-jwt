generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  uid          String  @unique @default(uuid())
  firstName    String
  lastName     String
  email        String  @unique
  password     String
  refreshToken String?
  roleId       Int
  role         Role    @relation(fields: [roleId], references: [id])

  @@map("users")
}

model Role {
  id    Int    @id @default(autoincrement())
  uid   String @unique @default(uuid())
  name  String @unique
  users User[]

  @@map("roles")
}
